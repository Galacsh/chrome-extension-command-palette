{
  "name": "@extension/popup",
  "version": "0.0.0",
  "description": "chrome extension popup",
  "private": true,
  "sideEffects": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean&& npm run type-check && vite build",
    "build:watch": "cross-env __DEV__=true vite build --mode development",
    "dev": "npm run build:watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint --fix",
    "prettier": "prettier . --write --ignore-path ../../.prettierignore",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@extension/shared": "0.0.0",
    "@extension/storage": "0.0.0",
    "@extension/content-runtime-script": "0.0.0",
    "@types/node": "^20.14.10"
  },
  "devDependencies": {
    "@extension/tailwindcss-config": "0.0.0",
    "@extension/tsconfig": "0.0.0",
    "@extension/vite-config": "0.0.0"
  }
}
